<% layout("public/layouts/boilerplate") %>
<style>
  h2,
  p {
    margin: 0.8rem;
    margin-bottom: 0;
  }
</style>
<h2><%= category %> Listings</h2>

<% if (allListings.length === 0) { %>
<p>No listings found in this category.</p>
<% } else { %>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for (let list of allListings) { %>
  <a href="/listings/<%= list._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= list.image.url %>"
        class="card-img-top"
        style="height: 20rem"
        alt="<%= list.title %>"
      />
      <div class="card-body">
        <p class="card-title"><b><%= list.title %></b></p>
        <p class="card-price">
          <%= list.price.toLocaleString('en-IN', { style: 'currency', currency:
          'INR' }) %>/night
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
<% } %>
